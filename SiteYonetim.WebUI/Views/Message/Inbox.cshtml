@using SiteYonetim.Entity.Concrete
@model List<Message>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group shadow-sm">
                <a href="/Message/Inbox" class="list-group-item list-group-item-action active bg-primary border-0">
                    <i class="bi bi-envelope-fill"></i> Gelen Kutusu
                </a>
                <a href="/Message/Sendbox" class="list-group-item list-group-item-action">
                    <i class="bi bi-send"></i> Giden Kutusu
                </a>
                <a href="/Message/SendMessage" class="list-group-item list-group-item-action text-danger fw-bold">
                    <i class="bi bi-plus-circle"></i> Yeni Mesaj Yaz
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0 text-primary">Gelen Mesajlar</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Kimden</th>
                                <th>Konu</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.IsRead ? "" : "table-active")">

                                    <td>
                                        <span class="@(item.IsRead ? "" : "fw-bold")">
                                            @item.SenderMail
                                        </span>

                                        @if (!item.IsRead)
                                        {
                                            <span class="badge bg-danger ms-2" style="font-size: 0.6rem;">YENİ</span>
                                        }
                                    </td>

                                    <td>
                                        <span class="@(item.IsRead ? "" : "fw-bold")">
                                            @item.Subject
                                        </span>
                                    </td>

                                    <td>@item.Date.ToString("dd.MM.yyyy")</td>

                                    <td>
                                        <a href="/Message/MessageDetails/@item.Id"
                                            class="btn btn-warning btn-sm text-white">
                                            <i class="bi bi-eye"></i> Oku
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Count == 0)
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-inbox fs-1"></i><br>
                            Hiç mesajınız yok.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>