@model SiteYonetim.Entity.Concrete.Message

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Mesaj Detayı</h5>
            <a href="/Message/Inbox" class="btn btn-light btn-sm text-primary">Geri Dön</a>
        </div>
        <div class="card-body">

            <h3 class="card-title fw-bold">@Model.Subject</h3>
            <hr />

            <div class="mb-3">
                <span class="text-muted">Kimden:</span>
                <span class="fw-bold text-dark">@Model.SenderMail</span>
                <span class="text-muted float-end">@Model.Date.ToString("dd.MM.yyyy HH:mm")</span>
            </div>

            <div class="p-4 bg-light rounded border mb-4">
                @Model.Content
            </div>

            <a href="/Message/SendMessage?aliciMail=@Model.SenderMail" class="btn btn-primary">
                <i class="bi bi-reply-fill"></i> Cevapla
            </a>

        </div>
    </div>
</div>