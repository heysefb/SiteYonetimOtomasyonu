@using SiteYonetim.Entity.Concrete
@model List<Block>

<div class="card shadow mt-4 border-0">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0"><i class="bi bi-grid-3x3"></i> Site Blok Listesi</h3>
    </div>
    <div class="card-body">
        
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Blok Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td class="fw-bold">@item.Name</td>
                        <td>
                            <a asp-controller="Block" asp-action="UpdateBlock" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Güncelle
                            </a>
                            <a asp-controller="Block" asp-action="DeleteBlock" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?')">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="mt-3">
            <a asp-controller="Block" asp-action="AddBlock" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Blok Ekle
            </a>

        </div>

    </div>
</div>