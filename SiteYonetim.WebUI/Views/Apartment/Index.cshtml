@using SiteYonetim.Entity.Concrete
@model List<Apartment>

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apartman Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Apartman Daireleri</h2>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Blok</th>
                    <th>Daire No</th>
                    <th>Kat</th>
                    <th>Tip</th>
                    <th>Durum</th>
                    <th>Oturan</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Block?.Name</td>
                        <td>@item.ApartmentNumber</td>
                        <td>@item.Floor</td>
                        <td>@item.Type</td>
                        <td>
                            @if (item.IsOccupied)
                            {
                                <span class="badge bg-success">Dolu</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Boş</span>
                            }
                        </td>
                        <td>
                            @if (item.User != null)
                            {
                                <span class="fw-bold text-primary">
                                    @item.User.Name @item.User.Surname
                                </span>
                                <br />
                                <small class="text-muted">(@item.OwnerOrTenant)</small>
                            }
                            else
                            {
                                <span class="text-muted">
                                    @item.OwnerOrTenant (Kayıtlı Kişi Yok)
                                </span>
                            }
                        </td>
                        <td>
                            <a asp-action="UpdateApartment" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                            <a asp-action="DeleteApartment" asp-route-id="@item.Id" class="btn btn-danger"
                                onclick="return confirm('Bu daireyi silmek istediğinize emin misiniz?');">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <br />
        <a href="/Apartment/AddApartment" class="btn btn-primary">Yeni Daire Ekle</a>
    </div>
</body>

</html>