<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elit Site Yönetimi</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        /* Genel Yazı Tipi Ayarı */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            /* Hafif gri arka plan (Göz yormaz) */
        }

        /* Navbar (Üst Menü) Ayarları */
        .navbar {
            box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
            /* Hafif gölge */
        }

        /* Kartların köşe yumuşaklığı */
        .card {
            border-radius: 10px;
            border: none;
        }
    </style>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-buildings-fill text-warning"></i> Elit Site Yönetimi
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Dashboard" asp-action="Index" class="nav-link text-white">
                                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Block" asp-action="Index">
                                    <i class="bi bi-grid-3x3 me-2"></i> Bloklar
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Apartment" asp-action="Index">
                                    <i class="bi bi-houses me-2"></i> Daireler
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">
                                    <i class="bi bi-people-fill me-2"></i> Kullanıcılar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dues" asp-action="Index">
                                    <i class="bi bi-cash-stack me-2"></i> Aidatlar
                                </a>
                            </li>

                        }
                        <li class="nav-item">
                            <a asp-controller="Message" asp-action="Inbox" class="nav-link text-white">
                                <i class="bi bi-envelope-fill me-2"></i> Mesajlar
                                @await Component.InvokeAsync("MessageNotification")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Profile" asp-action="MyDues" class="nav-link text-white">
                                <i class="bi bi-wallet2 me-2"></i> Borçlarım
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Profile" asp-action="Index" class="nav-link text-white">
                                <i class="bi bi-person-circle me-2"></i> Profilim
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a asp-controller="Login" asp-action="LogOut" class="nav-link text-danger">
                                <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="py-5">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-top py-4 mt-auto">
        <div class="container text-center text-muted">
            &copy; 2025 - <strong>Elit Site Yönetim Sistemi</strong> - Tüm Hakları Saklıdır.
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>