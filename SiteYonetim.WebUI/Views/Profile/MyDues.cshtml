@using SiteYonetim.Entity.Concrete
@model List<Dues>

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-receipt"></i> Aidat ve Borç Geçmişim</h4>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                @if (TempData["PaymentSuccess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["PaymentSuccess"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <thead>
                    <tr>
                        <th>Dönem</th>
                        <th>Daire</th>
                        <th>Tutar</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Month / @item.Year</td>
                            <td>
                                @item.Apartment.Block.Name - No: @item.Apartment.ApartmentNumber
                            </td>
                            <td class="fw-bold">@item.Amount ₺</td>
                            <td>
                                @if (item.IsPaid)
                                {
                                    <span class="badge bg-success">Ödendi</span>
                                }
                                else
                                {
                                    <a href="/Payment/Index/@item.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-credit-card"></i> Şimdi Öde
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Count == 0)
            {
                <div class="alert alert-info text-center">
                    Adınıza kayıtlı herhangi bir borç bulunmamaktadır.
                </div>
            }

        </div>
    </div>
</div>